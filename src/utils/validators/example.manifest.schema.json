{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://dev.weebly.com/element-manifest-example.html",
  "type": "object",
  "properties": {
    "manifest": {
      "$id": "/properties/manifest",
      "type": "string",
      "title": "The Manifest Schema.",
      "description": "The Weebly manifest version this file uses.",
      "default": "1",
      "examples": [
        "1"
      ]
    },
    "version": {
      "$id": "/properties/version",
      "type": "string",
      "title": "App Version",
      "description": "The overall version for this app, must be SEMVER format and greater than the any sub-components",
      "default": "0.1.0",
      "examples": [
        "3.1.0"
      ]
    },
    "locale": {
      "$id": "/properties/locale",
      "type": "string",
      "title": "Locale schema",
      "description": "Localization information about this app.",
      "default": "en-us",
      "examples": [
        "en-gb"
      ]
    },
    "client_id": {
      "$id": "/properties/client_id",
      "type": "string",
      "title": "The Client_id Schema.",
      "description": "The OAuth2 `client_id` as provided by the Weebly Developer Admin",
      "default": "",
      "examples": [
        "191919238"
      ]
    },
    "callback_url": {
      "$id": "/properties/callback_url",
      "type": "string",
      "title": "App OAuth Callback URL",
      "description": "The app callback URL used during OAuth2 Authorization Flow",
      "default": "",
      "examples": [
        "url"
      ]
    },
    "manage_app_url": {
      "$id": "/properties/manage_app_url",
      "type": "string",
      "title": "The Manage_app_url Schema.",
      "description": "The URL to manage external settings for this app",
      "default": "",
      "examples": [
        "url"
      ]
    },
    "scopes": {
      "$id": "/properties/scopes",
      "type": "array",
      "items": {
        "$id": "/properties/scopes/items",
        "type": "string",
        "title": "App scope",
        "description": "The scopes required by this application if accessing the API",
        "default": "",
        "examples": [
          "string"
        ]
      }
    },
    "webhooks": {
      "$id": "/properties/webhooks",
      "type": "object",
      "properties": {
        "callback_url": {
          "$id": "/properties/webhooks/properties/callback_url",
          "type": "string",
          "title": "Webhook Callback URL",
          "description": "Must be implemented if using Webhooks, acts as the OAuth2 Authorization Flow to subscribe to events.",
          "default": "",
          "examples": [
            "url"
          ]
        },
        "events": {
          "$id": "/properties/webhooks/properties/events",
          "type": "array",
          "items": {
            "$id": "/properties/webhooks/properties/events/items",
            "type": "string",
            "title": "Webhook Events",
            "description": "List of valid events to which webhooks may subscribe",
            "default": "",
            "examples": [
              "string"
            ]
          }
        }
      },
      "required": [
        "callback_url",
        "events"
      ]
    },
    "snippet": {
      "$id": "/properties/snippet",
      "type": "string",
      "title": "The Snippet Schema.",
      "description": "Relative path to the HTML for the snippet",
      "default": "",
      "examples": [
        "relative/path/to/snippet.html"
      ]
    },
    "oauth_final_destination": {
      "$id": "/properties/oauth_final_destination",
      "type": "string",
      "title": "The Oauth_final_destination Schema.",
      "description": "Instructs Weebly where to redirect the user after they have authorized an app for use on their site.",
      "default": "",
      "examples": [
        "editor"
      ]
    },
    "dashboard_cards": {
      "$id": "/properties/dashboard_cards",
      "type": "object",
      "properties": {
        "name": {
          "$id": "/properties/dashboard_cards/properties/name",
          "type": "string",
          "title": "Internal Dashboard Card Name",
          "description": "This is the internal reference name for the given element.",
          "default": "",
          "examples": [
            "nameOfDashboardCard"
          ]
        },
        "version": {
          "$id": "/properties/dashboard_cards/properties/version",
          "type": "string",
          "title": "Dashboard Card Version",
          "description": "This is the version of the given dashboard card, must be in SEMVER format",
          "default": "",
          "examples": [
            "2.3.1"
          ]
        },
        "label": {
          "$id": "/properties/dashboard_cards/properties/label",
          "type": "string",
          "title": "Dashboard Card Label",
          "description": "The publicly displayed label of the given dashboard card",
          "default": "",
          "examples": [
            "label for dashboard card"
          ]
        },
        "icon": {
          "$id": "/properties/dashboard_cards/properties/icon",
          "type": "string",
          "title": "Dashboard Card Icon",
          "description": "The icon for the given dashboard card, must be SVG file",
          "default": "",
          "examples": [
            "relative/path/to/icon.svg"
          ]
        },
        "link": {
          "$id": "/properties/dashboard_cards/properties/link",
          "type": "string",
          "title": "The Link Schema.",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
            "url"
          ]
        },
        "default": {
          "$id": "/properties/dashboard_cards/properties/default",
          "type": "array",
          "items": {
            "$id": "asianbear",
            "title": "Empty Object",
            "description": "This accepts anything, as long as it's valid JSON."
          }
        }
      },
      "required": [
        "name",
        "version",
        "label",
        "icon"
      ]
    },
    "elements": {
      "$id": "/properties/elements",
      "type": "array",
      "items": {
        "$id": "/properties/elements/items",
        "type": "object",
        "properties": {
          "name": {
            "$id": "/properties/elements/items/properties/name",
            "type": "string",
            "title": "Element Name",
            "description": "The publicly displayed name of this element",
            "default": "",
            "examples": [
              "yourElementName"
            ]
          },
          "path": {
            "$id": "/properties/elements/items/properties/path",
            "type": "string",
            "title": "Element Asset Path",
            "description": "The relative path to the given element's assets.",
            "default": "",
            "examples": [
              "directory/path/to/element/assets"
            ]
          },
          "version": {
            "$id": "/properties/elements/items/properties/version",
            "type": "string",
            "title": "Element Version",
            "description": "The version of the given element in SEMVER format, must be lower than the App Version.",
            "default": "",
            "examples": [
              "0.1.0"
            ]
          },
          "settings": {
            "$id": "/properties/elements/items/properties/settings",
            "type": "object",
            "properties": {
              "config": {
                "$id": "/properties/elements/items/properties/settings/properties/config",
                "type": "object",
                "properties": {
                  "autopop": {
                    "$id": "/properties/elements/items/properties/settings/properties/config/properties/autopop",
                    "type": "boolean",
                    "title": "Element Auto-Display Property",
                    "description": "Set to true if you want the config modal to display automatically, else click element to display.",
                    "default": false,
                    "examples": [
                      true
                    ]
                  }
                },
                "required": [
                  "autopop"
                ]
              }
            },
            "required": [
              "config"
            ]
          },
          "properties": {
            "$id": "/properties/elements/items/properties/properties",
            "type": "array",
            "items": {
              "$id": "/properties/elements/items/properties/properties/items",
              "type": "object",
              "properties": {
                "name": {
                  "$id": "/properties/elements/items/properties/properties/items/properties/name",
                  "type": "string",
                  "title": "The Name Schema.",
                  "description": "An explanation about the purpose of this instance.",
                  "default": "",
                  "examples": [
                    "internalGroupName"
                  ]
                },
                "label": {
                  "$id": "/properties/elements/items/properties/properties/items/properties/label",
                  "type": "string",
                  "title": "The Label Schema.",
                  "description": "An explanation about the purpose of this instance.",
                  "default": "",
                  "examples": [
                    "group label"
                  ]
                },
                "type": {
                  "$id": "/properties/elements/items/properties/properties/items/properties/type",
                  "type": "string",
                  "title": "The Type Schema.",
                  "description": "An explanation about the purpose of this instance.",
                  "default": "",
                  "examples": [
                    "group"
                  ]
                },
                "default": {
                  "$id": "/properties/elements/items/properties/properties/items/properties/default",
                  "type": "string",
                  "title": "The Default Schema.",
                  "description": "An explanation about the purpose of this instance.",
                  "default": "",
                  "examples": [
                    "string"
                  ]
                },
                "hidden": {
                  "$id": "/properties/elements/items/properties/properties/items/properties/hidden",
                  "type": "boolean",
                  "title": "The Hidden Schema.",
                  "description": "An explanation about the purpose of this instance.",
                  "default": false,
                  "examples": [
                    true
                  ]
                },
                "private": {
                  "$id": "/properties/elements/items/properties/properties/items/properties/private",
                  "type": "boolean",
                  "title": "The Private Schema.",
                  "description": "An explanation about the purpose of this instance.",
                  "default": false,
                  "examples": [
                    true
                  ]
                },
                "tooltip": {
                  "$id": "/properties/elements/items/properties/properties/items/properties/tooltip",
                  "type": "string",
                  "title": "The Tooltip Schema.",
                  "description": "An explanation about the purpose of this instance.",
                  "default": "",
                  "examples": [
                    "your custom tooltip."
                  ]
                }
              }
            }
          }
        },
        "required": [
          "name",
          "path",
          "version",
          "settings"
        ]
      }
    },
    "tutorial": {
      "$id": "/properties/tutorial",
      "type": "object",
      "properties": {
        "introduction": {
          "$id": "/properties/tutorial/properties/introduction",
          "type": "string",
          "title": "The Introduction Schema.",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
            "Introduction content for the tutorial"
          ]
        },
        "type": {
          "$id": "/properties/tutorial/properties/type",
          "type": "string",
          "title": "The Type Schema.",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
            "topics"
          ]
        },
        "content": {
          "$id": "/properties/tutorial/properties/content",
          "type": "array",
          "items": {
            "$id": "/properties/tutorial/properties/content/items",
            "type": "object",
            "properties": {
              "label": {
                "$id": "/properties/tutorial/properties/content/items/properties/label",
                "type": "string",
                "title": "The Label Schema.",
                "description": "An explanation about the purpose of this instance.",
                "default": "",
                "examples": [
                  "tutorial content label"
                ]
              },
              "introduction": {
                "$id": "/properties/tutorial/properties/content/items/properties/introduction",
                "type": "string",
                "title": "The Introduction Schema.",
                "description": "An explanation about the purpose of this instance.",
                "default": "",
                "examples": [
                  "Here is the tutorial content label content"
                ]
              },
              "type": {
                "$id": "/properties/tutorial/properties/content/items/properties/type",
                "type": "string",
                "title": "The Type Schema.",
                "description": "An explanation about the purpose of this instance.",
                "default": "",
                "examples": [
                  "steps"
                ]
              }
            }
          }
        },
        "autopop": {
          "$id": "/properties/tutorial/properties/autopop",
          "type": "boolean",
          "title": "The Autopop Schema.",
          "description": "An explanation about the purpose of this instance.",
          "default": false,
          "examples": [
            true
          ]
        }
      }
    }
  },
  "required": [
    "manifest",
    "version"
  ]
}
